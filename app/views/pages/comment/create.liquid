---
method: post
---
{% liquid
  function user = 'queries/user/load', id: context.current_user.id
  unless user
    redirect_to '/unauthorized'
  endunless

  assign rating = context.params.rating | plus: 0
  assign age = user.age | plus: 0

  graphql result = 'comment/comment_create', username: user.name, age: age, rating: rating, comment: context.params.comment, film_id: context.params.id

  if result.record.id
    redirect_to '/'
  else
    echo 'Something went wrong'
    echo result.errors
  endif
%}
