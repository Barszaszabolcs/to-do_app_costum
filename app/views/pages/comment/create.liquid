---
method: post
---
{% assign age_help = context.params.age | plus: 0 %}
{% assign rating_help = context.params.rating | plus: 0 %}
{% liquid
	graphql result = 'comment/comment_create', username: context.params.username, age: age_help, rating: rating_help, comment: context.params.comment, film_id: context.params.id 

	if result.record.id
		redirect_to '/'
	else
		echo 'Something went wrong'
		echo result.errors
	endif
%}