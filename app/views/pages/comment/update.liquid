---
method: post
---

{% liquid
	assign rating_help = context.params.rating | plus: 0
	graphql result = 'comment/update', id: context.params.id, rating: rating_help, comment: context.params.comment

	if result.record.id
		redirect_to '/'
	else
		echo 'Something went wrong'
		echo result.errors
	endif
%}