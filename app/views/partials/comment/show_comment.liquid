<div>
    <h1 class="text-4xl mt-5">{{ item.username }}'s comment</h1>
</div>

<div class="form-container mb-5">
    <form action="/comment/update" method="post">
        <input type="hidden" name="id" value="{{ item.id }}">

        <label for="username">Username: </label>
        <input type="text" id="username" class="form-container__text-input" name="username" value="{{ item.username }}" disabled>
  
        <label for="age">Age: </label>
        <input type="number" id="age" class="form-container__number-input" name="age" value="{{ item.age }}" disabled><br><br>
        
        <label for="rating">Rating (0-5): </label>
        <div class="slider">
          <input class="slider__input" type="range" min="0" max="5" value="{{ item.rating }}" name="rating" id="rating" oninput="rangeValue.innerText = this.value">
          <p class="slider__text" id="rangeValue">{{ item.rating }}</p>
        </div>
        
        <label for="comment">Comment: </label>
        <textarea id="comment" class="form-container__textarea" name="comment" style="height: 150px" required>{{ item.comment }}</textarea>
  
        <input class="form-container__button" type="submit" value="Update comment">
  
    </form>
</div>